@using Festibeau.database;
@model List<Festival>
@{
    ViewData["Title"] = "festivals";
}

<h1>Festivals</h1>

<div class="festivals">
    @foreach (Festival f in Model)
    {
        <div class="festival">
            <a href="/festival/@f.Id/@f.naam">@f.naam-</a>
        </div>
    }
</div>

