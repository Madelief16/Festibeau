@model SendAndStore.Models.Person
@{ ViewData["Title"] = "Contact"; }
<h1>@ViewData["Title"]</h1>



<div id="contact">

    <form method="post">
        <div> Voornaam: <input type="text" name="firstname" /> </div>
        @Html.ValidationMessageFor(m => m.FirstName)
        <div> Achternaam: <input type="text" name="lastname" /> </div>
        @Html.ValidationMessageFor(m => m.LastName)
        <div> E-mail: <input type="text" name="email" /> </div>
        @Html.ValidationMessageFor(m => m.Email)
        <div> Wachtwoord: <input type="text" name="wachtwoord" /> </div>
        @Html.ValidationMessageFor(m => m.Wachtwoord)
        <div> Telefoon: <input type="text" name="phone" /> </div>
        <div> Adres: <input type="text" name="address" /> </div>
        <div> beschrijving: <input type="text" name="address" /> </div>
        <input type="submit" value="verstuur" />
    </form>

    @if (Model != null)
    {
        <p>Hallo @Model.FirstName die achternaam @Model.LastName heeft </p>
    }
</div>
