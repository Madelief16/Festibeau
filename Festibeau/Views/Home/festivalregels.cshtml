@using Festibeau.database;
@model List<Regel>
@{
    ViewData["Title"] = "regels";
}

<p>
    Omtrent het corona-virus zullen ook wij ons moeten houden aan bepaalde regels.
    Deze regels zijn heel belangrijk om je aan te houden, als wij tenminste willen partyen dit jaar
    Dit zijn de regels die gelden op ons festival;
</p>

<div class="text-center">
    <h1>Alle Regels!</h1>
    @foreach (Regel r in Model)
    {
        <p>@r.richtlijnen </p>
    }
</div>






